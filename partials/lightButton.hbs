{{#if darkBorder}}
  <a
    class="bg-transparent hover:bg-primary max-w-xs relative flex items-center justify-center h-10 pt-5 pb-5 pl-10 pr-10 text-primary whitespace-nowrap hover:text-white border-1 border-primary"
    href={{this.href}}
  >
    <p class="">{{this.text}}</p>
    <div
      class="border-primary border-b-1 border-r-1 absolute left-1 top-1 w-full h-full"
    >
    </div>
  </a>
{{else}}
  <a
    class="bg-transparent hover:bg-white relative max-w-xs flex items-center justify-center h-10 pt-5 pb-5 pl-10 pr-10 text-white whitespace-nowrap hover:text-primary border-1 border-white"
    href={{this.href}}
  >
    <p class="">{{this.text}}</p>
    <div
      class="border-white border-b-1 border-r-1 absolute left-1 top-1 w-full h-full"
    >
    </div>
  </a>
{{/if}}